# AIPS++ fundamentals.
#---------------------
include $(word 1, $(AIPSPATH))/code/install/makefile.app_c

#override PGMRBIND := PGMRLIBD

# Programmer-oriented pattern rules.
ifeq "$(MAKEMODE)" "programmer"
   .PRECIOUS : $(PGMRLIBD)/_%.$(SFXSHAR) $(PGMRBIND)/%.o $(PGMRBIND)/%.i

   _%.$(SFXSHAR) : $(PGMRLIBD)/_%.$(SFXSHAR) ;
   %             : _%.$(SFXSHAR) ;

   $(PGMRLIBD)/_%.$(SFXSHAR) : $(PGMRBIND)/%.o $(PGMRLIBR)
	-@ echo ""
	-@ $(RM) $@
	   $(MKSO) $(LDSOPTS) -o $@ $< $(LDFLAGS) $(PGMRLIBS) 
endif

$(LIBDBGD)/_%.$(SFXSHAR) : $(CODEDIR)/%.cc $(AIPSINST) \
   $(addprefix $(TMPPCKGD)/, $(addsuffix cc, $(LEXYACC))) \
   $(addprefix $(CODEDIR)/,$(AIPSIMPS)) $(DBGLIBS)
	-@ echo ""
	-@ $(TIMER)
	-@ echo "Remaking _$*.$(SFXSHAR) (dbg) because of $(?F)"
	-@ if [ -h $@ ]; then $(RM) $@; fi
	 @ cd $(TMPPCKGD) && \
	   $(MKSO) $(LDSOPTS) $(CPPDBG) -I$(TMPPCKGD) -I$(CODEDIR) \
	      $(AIPSINCL) $(C++DBG) \
	      $(LDDBG) -o $@ $< $(AIPSINST:%=%/*.cc) \
	      $(addprefix $(CODEDIR)/,$(AIPSIMPS)) \
	      $(patsubst $(LIBDBGD)/_%.$(SFXSHAR), -l%, $(DBGLIBS)) \
	      $(MODULIBS) $(XTRNLIBS)
	-@ $(TIMER)
	-@ $(RM) $(patsubst %.cc,$(TMPPCKGD)/%.o,$(<F) $(AIPSIMPS)) \
	         $(addprefix $(TMPPCKGD)/, $(addsuffix cc, $(LEXYACC)))

$(LIBOPTD)/_%.$(SFXSHAR) : $(CODEDIR)/%.cc $(AIPSINST) \
   $(addprefix $(TMPPCKGD)/, $(addsuffix cc, $(LEXYACC))) \
   $(addprefix $(CODEDIR)/,$(AIPSIMPS)) $(OPTLIBS)
	-@ echo ""
	-@ $(TIMER)
	-@ echo "Remaking _$*.$(SFXSHAR) (opt) because of $(?F)"
	-@ if [ -h $@ ]; then $(RM) $@; fi
	 @ cd $(TMPPCKGD) && \
	   $(MKSO) $(LDSOPTS) $(CPPOPT) -I$(TMPPCKGD) -I$(CODEDIR) \
	      $(AIPSINCL) $(C++OPT) \
	      $(LDOPT) -o $@ $< $(AIPSINST:%=%/*.cc) \
	      $(addprefix $(CODEDIR)/,$(AIPSIMPS)) $(OPTVERSO) \
	      $(patsubst $(LIBOPTD)/_%.$(SFXSHAR), -l%, $(OPTLIBS)) \
	      $(MODULIBS) $(XTRNLIBS)
	-@ $(TIMER)
	-@ $(RM) $(patsubst %.cc,$(TMPPCKGD)/%.o,$(<F) $(AIPSIMPS)) \
	         $(addprefix $(TMPPCKGD)/, $(addsuffix cc, $(LEXYACC)))

$(LIBDBGD)/_%.$(SFXSTAT) : ;
$(BINDBGD)/% : ;
$(LIBOPTD)/_%.$(SFXSTAT) : ;
$(BINOPTD)/% : ;

bin    : $(TMPPCKGD) $(LIBOPTD)/_$(THISAPP).$(SFXSHAR) $(LIBPYTHS) $(LIBEXECS) $(LIBICONS) $(BINEXECS) ;

bindbg : $(TMPPCKGD) $(LIBDBGD)/_$(THISAPP).$(SFXSHAR) ;
